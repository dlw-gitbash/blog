<% if (!theme.word_count.only_article_visit || (!index && theme.word_count.only_article_visit)){ %>
<div style="margin-top:6px;">
  <span class="post-time">
    <span class="post-meta-item-icon">
      <!-- fonts.scss -->
      <!-- 百度字体平台:http://fontstore.baidu.com/static/editor/index.html -->
      <i class="icon-sort"></i>
      <span class="post-meta-item-text" style="color:#ef7522;font-size:14px;"> 字数统计:</span>
      <span class="post-count" style="color:#9400D3;font-size:14px;"><%= wordcount(post.content) %>字</span>
    </span>
  </span>

  <span class="post-time">
    &nbsp; | &nbsp;
    <span class="post-meta-item-icon">
      <i class="icon-sort"></i>
      <span class="post-meta-item-text" style="color:#ef7522;font-size:14px;"> 阅读时长:</span>
      <span class="post-count" style="color:#9400D3;font-size:14px;"><%= min2read(post.content) %>分</span>
    </span>
  </span>
</div>
<% } %>
